<% content_for :page_title do %>
  <%= Spree.t(:rack_stock_report) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon 'arrow-left', Spree.t(:back_to_reports_list), spree.admin_reports_url, :class => 'button' %></li>
<% end %>


<% content_for :table_filter_title do %>
  <%= Spree.t(:filter_options) %>
<% end %>

<% content_for :table_filter do %>
  <%= render :partial => 'spree/admin/shared/rack_stock_report_criteria', :locals => {} %>
<% end %>


<table class="admin-report" data-hook="visit">
  <thead>
    <tr>
      <th><%= Spree.t(:rack_name) %></th>
      <th><%= Spree.t(:product_name) %></th>
      <th><%= Spree.t(:stock) %></th>
    </tr>
  </thead>  
  <tbody>
    <% if @data.present? %>
    <% @data.each do |rows| %>
      <tr class="align-center">
        <td><%= rows[:rack] %></td>
        <td><%= rows[:design] %></td>
        <td><%= rows[:count] %></td>
      </tr>
    <% end %>
  <% end %>
    
  </tbody>
</table>
<%= paginate @data, theme: "solidus_admin" %>