<% s_or_b = type.chars.first %>

<div id="<%= type %>" data-hook="address_fields">
  <div class="field <%= "#{type}-row" %>">
    <%= f.label :firstname %>
    <%= f.text_field :firstname, :class => 'fullwidth', :disabled => true %>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :lastname %>
    <%= f.text_field :lastname, :class => 'fullwidth', :disabled => true %>
  </div>

  <% if Spree::Config[:company] %>
    <div class="field <%= "#{type}-row" %>">
      <%= f.label :company %>
      <%= f.text_field :company, :class => 'fullwidth', :disabled => true %>
    </div>
  <% end %>


  <div class="field <%= "#{type}-row" %>">
    <%= f.label :address1 %>
    <%= f.text_field :address1, :class => 'fullwidth', :disabled => true %>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :address2 %>
    <%= f.text_field :address2, :class => 'fullwidth', :disabled => true %>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :city %>
    <%= f.text_field :city, :class => 'fullwidth', :disabled => true %>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode, :class => 'fullwidth', :disabled => true %>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :country_id, Spree::Country.model_name.human %>
    <span id="<%= s_or_b %>country">
      <%= f.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'select2 fullwidth', :disabled => true} %>
    </span>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :state_id, Spree::State.model_name.human %>
    <span id="<%= s_or_b %>state">
      <%= f.text_field :state_name,
                       :style => "display: #{f.object.country.states.empty? ? 'block' : 'none' };",
                       :disabled => true, :class => 'fullwidth state_name' %>
      <%= f.collection_select :state_id, f.object.country.states.sort, :id, :name, {:include_blank => true}, {:class => 'select2 fullwidth', :style => "display: #{f.object.country.states.empty? ? 'none' : 'block' };", :disabled => true} %>
    </span>
  </div>

  <div class="field <%= "#{type}-row" %>">
    <%= f.label :phone %>
    <%= f.phone_field :phone, :class => 'fullwidth', :disabled => true %>
  </div>
  <% if type == 's' %>
    <% Spree::Config[:alternative_shipping_phone] %>
  <% else %>
    <% Spree::Config[:alternative_billing_phone] %>
  <% end %>
  <div class="field <%= "#{type}-row" %>">
    <%= f.label :alternative_phone %>
    <%= f.phone_field :alternative_phone, :class => 'fullwidth', :disabled => true %>
  </div>
</div>
