<% content_for :page_title do %>
  <%= Spree.t(:edit_item) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_taxonomies_list), spree.admin_taxonomies_path, :icon => 'arrow-left' %>
  </li>
<% end %>
<% form_url = update_new_item_admin_taxon_path(@taxon.id) %>
<%= form_for [:admin, @taxon], :url => form_url, :html => { :multipart => true } do |f| %>
  <%= render 'new_item_form', :f => f %>
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>