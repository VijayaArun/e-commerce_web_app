<%= render 'spree/admin/shared/shipping_tabs' %>

<% content_for :page_title do %>
  <%= Spree.t(:new_rack) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_racks_list), spree.admin_racks_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_rack_new_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @rack } %>
</div>

<div data-hook="admin_rack_new_form">
  <%= form_for [:admin, @rack] do |f| %>
    <fieldset class="no-border-top">
      <%= render :partial => 'form', :locals => { :f => f } %>

      <div class="clear"></div>

      <div data-hook="admin_rack_new_form_buttons">
        <%= render :partial => 'spree/admin/shared/new_resource_links' %>
      </div>
    </fieldset>
  <% end %>
</div>

<script>
    window.onunload = refreshParent;
    function refreshParent() {
      window.opener.refreshRack();
    }
</script>
