<%= form_for [:admin, @user, @payment], method: :patch, url: admin_user_vendor_payment_path(@user.id, @payment.id), :html => { :remote => true} do |f| %>

  <fieldset data-hook="new_payment">

    <legend align="center"><%= Spree.t(:edit_payment) %></legend>
    <%= render :partial => 'form', :locals => { :f => f } %>
